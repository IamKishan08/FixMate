<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Outer border -->
    <stroke
        android:width="2dp"
        android:color="@color/black" />

    <!-- Rounded corners -->
    <corners
        android:radius="5dp" />

    <!-- Background color -->
    <solid
        android:color="@color/white" />

    <!-- Padding for text inside -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />

</shape>
