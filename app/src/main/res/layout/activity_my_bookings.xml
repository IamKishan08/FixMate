<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyBookingsActivity">




        <TextView
            android:id="@+id/myBookingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_bookings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myBookingsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/myBookingsTitle"
            android:layout_marginTop="16dp"
            android:divider="@null"
            android:dividerHeight="0dp"/>

        <TextView
            android:id="@+id/noBookingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_bookings"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_centerInParent="true"
            android:visibility="gone"/>




</RelativeLayout>